<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF1F8"
    tools:context=".mostrarbene_secre">

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#687089"
        android:paddingTop="25dp"
        android:text="Lista de beneficiarios"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />
    <!--<Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/text1"
        android:id="@+id/mostrarbene"
        android:text="Mostrar Beneficiarios">
    </Button>
-->
    <ListView
        android:id="@+id/libenefi"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/text1"
        android:background="#EFF1F8"
        android:textColor="#000000"
        android:textSize="22sp" ></ListView>
    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#687089"
        android:text="Regresar a Menu"
        app:backgroundTint="#687089"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/libenefi"/>

</RelativeLayout>